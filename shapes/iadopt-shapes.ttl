@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <https://w3id.org/iadopt/ont/> .

# VariableSet Shape
ex:VariableSetShape
    a sh:NodeShape ;
    sh:targetClass ex:VariableSet ;
    sh:property [
        sh:path ex:hasApplicableObjectOfInterest ;
        sh:class ex:Entity ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path ex:hasApplicableMatrix ;
        sh:class ex:Entity ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path ex:hasApplicableContextObject ;
        sh:class ex:Entity ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path ex:hasApplicableProperty ;
        sh:class ex:Property ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path ex:hasMember ;
        sh:class ex:Variable ;
        sh:minCount 0 ;
    ] .

# Entity Shape
ex:EntityShape
    a sh:NodeShape ;
    sh:targetClass ex:Entity ;
    sh:property [
        sh:path ex:hasObjectOfInterest ;
        sh:class ex:Variable ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasMatrix ;
        sh:class ex:Variable ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasContextObject ;
        sh:class ex:Variable ;
        sh:minCount 0 ;
    ] ;
    sh:property [
        sh:path ex:constrains ;
        sh:class ex:Constraint ;
        sh:minCount 0 ;
    ] .

# Variable Shape
ex:VariableShape
    a sh:NodeShape ;
    sh:targetClass ex:Variable ;
    sh:property [
        sh:path ex:hasProperty ;
        sh:class ex:Property ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasConstraint ;
        sh:class ex:Constraint ;
        sh:minCount 0 ;
    ] .

# Property Shape
ex:PropertyShape
    a sh:NodeShape ;
    sh:targetClass ex:Property .

# Constraint Shape
ex:ConstraintShape
    a sh:NodeShape ;
    sh:targetClass ex:Constraint .